@require '../styles/variables'

.main-nav
  display: block
  text-align: center
  font-size: 1.1rem
  background: rgba($bg, .9)
  height: $nav-height
  position: sticky
  top: 0
  z-index: 1
  @supports (backdrop-filter: none)
    backdrop-filter: blur(1rem) brightness(.5) contrast(.9)
    background: rgba($bg, .3)
  nav
    overflow-x: auto
    overflow-y: hidden
    white-space: nowrap
  a
    padding: 1rem .5rem
    font-variant: all-small-caps common-ligatures
    font-weight: bold
    text-align: center
    &:hover,&.active
      &:after
       transform: scale(1) translateY(-.8rem)
    &.active
      color: $brand-accent
