@require '_reset'
@require 'variables'
@require 'fonts'
@require 'mixins'

:global 
  body,html 
    background: $bg
    color: $fg
    font-family: worg, sans-serif
    font-variant: common-ligatures
    -moz-osx-font-smoothing: grayscale
    -webkit-font-smoothing: antialiased
  body
    min-height: 100vh
  for num in (1..5)
    h{num}
      font-size: 2.5 - (.15 * num)rem
  @media $mobile-md
    for num in (1..5)
      h{num}
        font-size: 1.8 - (.1 * num)rem
  a
    text-decoration: none
    color: $fg
    position: relative
    display: inline-block
    &:visited
      color: $accent
    &:after
      content: ''
      position: absolute
      display: block
      background: $brand-accent
      width: 100%
      height: .2rem
      top: 100%
      left: 0
      opacity: 0.5
      transform: scale3d(0,0,1) translateY(1rem)
      transform-origin: center top
      transition: all .185s $ease-pop
    &:hover
      color: $brand-accent
      &:after
       transform: scale3d(1,1,1) translateY(-.1rem)
       opacity: 1s
  .main-container
    center()
    min-height: 90vh
    max-width: 1080px
    position: relative
    @media $mobile-md
      max-width: 80vh
